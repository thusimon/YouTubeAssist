<Window x:Class="YouTubeAssist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YouTubeAssist"
        xmlns:properties="clr-namespace:YouTubeAssist.Properties"
        mc:Ignorable="d"
        Title="{x:Static properties:Resource.WinTitle}" Height="450" Width="800"
        Icon="{StaticResource WinIcon}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0">
            <Menu DockPanel.Dock="Top">
                <MenuItem Name="Search_MenuItem" Header="_Search" Click="Search_MenuItem_Click" />
                <MenuItem Name="Notifications_MenuItem" Header="_Notifications" Click="Notifications_MenuItem_Click" />
                <MenuItem Name="About_MenuItem" Header="_About" Click="About_MenuItem_Click" />
            </Menu>
        </DockPanel>
        <ContentControl x:Name="MainContentControl" Grid.Row="1" />
    </Grid>
</Window>
