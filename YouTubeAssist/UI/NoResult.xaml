<UserControl x:Class="YouTubeAssist.UI.NoResult"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YouTubeAssist.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel VerticalAlignment="Center">
        <Image Source="{StaticResource NoResultImg}" Width="100" Height="100" />
        <TextBlock Text="No Results found" HorizontalAlignment="Center" FontSize="30" Margin="10"/>
    </StackPanel>
</UserControl>
